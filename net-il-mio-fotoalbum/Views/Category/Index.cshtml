
@model List<Category>

<h2>Le mie Foto</h2>

@if (Model.Count == 0)
{
<h3>Nessuna categoria disponibile</h3>
<a class="btn btn-primary" href="@Url.Action("Create", "Category")"> Aggiungi una categoria</a>
  
}

@if (Model != null)
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">Azioni</th>
            </tr>
        </thead>
        <tbody>


            @foreach (Category category in Model)
            {
                <tr>
                    <th scope="row">@category.CategoryId</th>
                    <td>@category.Name</td>

                    <td>




                        
                        <a class="btn btn-warning btn-sm my-1" href="@Url.Action("Update", "Category", new {id = category.CategoryId})">
                            Modifica
                        </a>


                        <form asp-controller="Category" asp-action="Delete" asp-route-id="@category.CategoryId" method="post">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger btn-sm">
                                Elimina
                            </button>
                        </form>
                        
                    </td>
                </tr>
            }


        </tbody>
    </table>

    <a class="btn btn-primary" href="@Url.Action("Create", "Category")"> Aggiungi una categoria</a>
}
else
{
    <p>Non esistono foto nel database</p>
    <a class="btn btn-primary" href="@Url.Action("Create", "Category")"> Aggiungi una categoria</a>
}






